{
  "name": "arco-app",
  "private": true,
  "version": "1.0.0",
  "description": "A minimalist exchange rate tracker for BCV",
  "overrides": {
    "tar": "^7.5.6"
  },
  "author": "Arco App Team",
  "type": "module",
  "main": "electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/CtrlS-dev/arcoapp-desk-version.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "export CSC_IDENTITY_AUTO_DISCOVERY=false && npm run build && electron-builder --mac",
    "electron:build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && npm run build && (taskkill /F /IM \"ArcoApp.exe\" /T || set ERRORLEVEL=0) && (taskkill /F /IM \"electron.exe\" /T || set ERRORLEVEL=0) && electron-builder --win"
  },
  "build": {
    "appId": "com.arco.app",
    "productName": "ArcoApp",
    "compression": "maximum",
    "asar": true,
    "npmRebuild": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "CtrlS-dev",
        "repo": "arcoapp-desk-version"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/arco-logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/arco-logo.png",
      "category": "public.app-category.finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Arco"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "driver.js": "^1.4.0",
    "electron-updater": "^6.7.3",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "framer-motion": "^12.29.0",
    "globals": "^16.5.0",
    "lucide-react": "^0.563.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}